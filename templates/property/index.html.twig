{% extends "base.html.twig" %}
{% block title %}Agence SymfImmo - Tous nos biens
{% endblock %}
{% block body %}
	<div class="jumbotron text-center">
		<h1>Agence SymfImmo - Tous nos biens</h1>
		{{ form_start(form) }}
		<div class="form-row align-items-end mt-4">
			<div class="col">
				{{ form_row(form.minSurface) }}
			</div>
			<div class="col">
				{{ form_row(form.maxPrice) }}
			</div>
			<div class="col">
				{{ form_row(form.options) }}
			</div>
			<div class="col">
				{{ form_row(form.distance) }}
			</div>
			<div class="col">
				<div class="form-group">
					<input type="text" name="" id="search_address" placeholder="Rechercher autour d'une ville" class="form-controle">
				</div>
			</div>
			<div class="col">
				<div class="form-group">
					<button type="submit" class="btn btn-primary">Rechercher</button>
				</div>
			</div>
		</div>
		{{ form_end(form) }}
	</div>
	<div class="container">
		<div class="row">
			{% for property in properties %}
				<div class="col-md-4">
					{% include "property/_property.html.twig" %}
				</div>
			{% endfor %}
		</div>
		<div class="pagination">
			{{ knp_pagination_render(properties) }}
		</div>
	</div>
{% endblock %}
