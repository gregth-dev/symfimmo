<div class="card mb-4">
	<div class="card-body">
		{% if property.picture %}
			<img src="{{ vich_uploader_asset(property.picture, 'imageFile') | imagine_filter('thumb')}}" alt="" class="card-img-top">
		{% else %}
			<img src="{{ asset('images/empty.jpg') | imagine_filter('thumb') }}" alt="" class="card-img-top">
		{% endif %}
		<h5 class="card-title">
			<a href="{{ path('property_show', {slug: property.slug, id: property.id}) }}">
				{{ property.title }}
			</a>
		</h5>
		<p class="card-text">{{ property.surface}}
			m² -
			{{ property.city}}
			<small>{{ property.postalCode }}</small>
		</p>
		<div class="text-primary" style="font-size:2rem; font-weight:bold">
			{{ property.formattedPrice }}
			€
		</div>
	</div>
</div>
